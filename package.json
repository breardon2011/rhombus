{
  "name": "rhombus",
  "displayName": "Rhombus",
  "description": "Code assistant with guidance",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "aiGuidance.prompts",
          "name": "AI Prompts"
        }
      ]
    },
    "commands": [
      {
        "command": "aiGuidance.runPrompt",
        "title": "Run AI Prompt"
      }
    ],
    "configuration": {
      "title": "AI Assistant",
      "properties": {
        "aiAssistant.llmUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Base URL of the real LLM server (Ollama, OpenAI gateway â€¦)"
        },
        "aiAssistant.proxyPort": {
          "type": "number",
          "default": 11555,
          "description": "Port the local AI proxy will listen on"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
